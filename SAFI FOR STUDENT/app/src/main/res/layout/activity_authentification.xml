<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Authentification"
    android:background="@android:color/background_light"
    android:orientation="vertical">

    <TextView
        android:id="@+id/signup"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:fontFamily="@font/montsserat"
        android:gravity="center"
        android:text="SIGN UP"
        android:layout_gravity="end"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="15sp"
        app:srcCompat="@android:color/background_light" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/logo" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:srcCompat="@android:color/background_light" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montsserat"
        android:gravity="center"
        android:text="Username" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="230dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:background="@drawable/rounded_edittext"
        android:fontFamily="@font/montsserat"
        android:gravity="center"
        android:inputType="textPersonName"
        android:text="Username"
        android:textSize="15sp"
        android:textColor="#5b5858"
        android:focusable="false"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:fontFamily="@font/montsserat"
        android:gravity="center|bottom"
        android:text="Password" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="230dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:background="@drawable/rounded_edittext"
        android:ems="10"
        android:fontFamily="@font/montsserat"
        android:gravity="center"
        android:inputType="textPassword"
        android:text="Rihabelm" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/connexion"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/rounded_edittext"
            android:backgroundTint="#008577"
            android:fontFamily="@font/montsserat"
            android:text="Connexion With APP"
            android:textColor="@android:color/background_light" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  OR WITH  "
            android:layout_gravity="center"
            android:fontFamily="@font/montsserat"/>
        <ImageView
            android:id="@+id/sign_in_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom"
            android:src="@drawable/google" />
        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content" />
    </LinearLayout>


    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montsserat"
        android:gravity="center"
        android:text="Password forgiven ?"
        android:textColor="@android:color/holo_blue_dark" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="20dp" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="bottom"
        android:fontFamily="@font/montsserat"
        android:text="SAFI FOR STUDENTS V 1.0 BY RIHAB ELMOURHIR"
        android:textSize="10sp" />

</LinearLayout>